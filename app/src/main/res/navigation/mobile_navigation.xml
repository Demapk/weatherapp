<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_list">

    <fragment
        android:id="@+id/navigation_list"
        android:name="ru.demapk.weatherapp.ui.main.list.ListFragment"
        android:label="@string/title_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_navigation_list_to_detailedFragment"
            app:destination="@id/detailedFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_location"
        android:name="ru.demapk.weatherapp.ui.main.geo.GeoFragment"
        android:label="@string/title_myloc"
        tools:layout="@layout/fragment_geo" >
        <action
            android:id="@+id/action_navigation_location_to_detailedFragment"
            app:destination="@id/detailedFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_search"
        android:name="ru.demapk.weatherapp.ui.main.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_navigation_search_to_detailedFragment"
            app:destination="@id/detailedFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailedFragment"
        android:name="ru.demapk.weatherapp.ui.main.detailed.DetailedFragment"
        android:label="Подробный прогноз" />
</navigation>